<h1>All posts
</h1>
{{#if success_message}}
<div class="alert alert-success">
    {{success_message}}
</div>
    {{/if}}

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Image</th>
        <th>Title</th>
        <th>Status</th>
    <th>Allow Comments</th>
<th>Date</th>
    </tr>

    </thead>
<tbody>
{{#each posts}} {{!#each function is a kind of for loop in handlebars and we loop through the array and fetch each individual entry--}}
<tr>
    <td>{{id}}</td>
    <td> <img  height="50" src="/uploads/{{file}}"> </td>

    <td>{{title}}</td>
    <td>{{status}}</td>
    <td>{{allowComments}}</td>
    <td>{{date}}</td>
    <td><a href="/admin/posts/edit/{{id}}"  class=" btn btn-info">Edit</a> </td>
<td>
    <form action="/admin/posts/{{id}}?_method=delete" method="post">
        <button type="submit" class="btn btn-danger">delete</button>

    </form>
</td>


</tr>
{{/each}}
</tbody>



</table>