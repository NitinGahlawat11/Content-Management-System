<h1> Edit a Post</h1>

<form method="post" action="/admin/posts/edit">
    <div class="form-group">

        <label for="title">title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{title}}">

    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>
    <div class="form-group">

        <label for="allowComments">
            <input name="allowComments" type="checkbox" class="form-control" id="allowComments" >
            Allow Comments
        </label>
    </div>
    <div class="form-group">

        <label for="Body">Body</label>
        <textarea name="Body" cols="150" rows="10" class="Body" id="Body" >{{body}}</textarea>


    </div>




    <input type="submit" class="btn-primary" value="submit">


</form>